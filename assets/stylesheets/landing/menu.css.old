.col {
    float: left;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding: 0 15px;
    min-height: 1px
}
.s-4 {
    width: 33.33%
}
.new-header {
    text-align: center;
    position: relative;
    width: 100%;
    font-size: 32px;
    color: #333;
    font-family: "proxima", "Arial", sans-serif
}
.new-header i {
    display: inline-block;
    margin-right: 7px
}
.catalog {
    margin: 10px auto
}
.catalog a {
    text-decoration: none
}
.catalog .new-header {
    padding: 40px 0 30px 0
}
.sprite {
    background-image: url("../../images/sprite.png");
    background-repeat: no-repeat;
    display: block
}
.sprite.sprite-catalog {
    background-position: -753px -447px;
    width: 25px;
    height: 24px
}
.catalog-item {
    margin-bottom: 30px;
    position: relative
}
.catalog-item img {
    width: 100%;
    max-width: 370px;
    height: auto;
    display: block
}
.catalog-item .shadow {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: #000;
    opacity: .4;
    display: block;
    -webkit-transition: opacity .25s ease;
    -moz-transition: opacity .25s ease;
    transition: opacity .25s ease
}
.catalog-item a:hover .shadow {
    opacity: .6
}
.catalog-item a:hover .catalog-ico:before {
    opacity: .9;
    width: 46px;
    left: 11px
}
.catalog-item .title {
    text-align: center;
    font-size: 22px;
    font-family: "proxima", "Arial", sans-serif;
    color: #fff;
    position: absolute;
    top: 30%;
    left: 0;
    width: 100%;
    font-weight: 300
}
.catalog-ico:before {
    content: "";
    display: block;
    background: #ffa115;
    height: 3px;
    width: 0;
    border-radius: 2px;
    opacity: 0;
    top: -15px;
    left: 34px;
    position: absolute;
    -webkit-transition: all .5s ease;
    -moz-transition: all .5s ease;
    transition: all .5s ease
}
.catalog-ico {
    width: 68px;
    height: 54px;
    margin: 30px auto 0 auto;
    background-image: url("../../images/sprite.png");
    background-repeat: no-repeat;
    position: relative
}
